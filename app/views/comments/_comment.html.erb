<div class="comment">
  <p class="comment-content"><%= comment.content %></p>
  <p class="comment-posted-by">Post√© par <%= comment.user.anonymous_username %> il y a <%= time_ago_in_words(comment.created_at) %></p>

  <% if user_signed_in? %>
    <% if comment.user_id == current_user.id %>
      <%= link_to "Editer", edit_message_comment_path(comment.message, comment) %>
      <%= link_to "Supprimer", message_comment_path(comment.message, comment), method: :delete, data: { confirm: "Es-tu sur?"} %>
   <% end %>
  <% end %>
</div>
