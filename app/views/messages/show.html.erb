<div class="col-md-8 col_md_offset-2">
    <div class="message-show">
      <h2><%= @message.title %></h2>
      <p class="message-posted-by">Posté par <%= @message.user.anonymous_username %> il y a <%= time_ago_in_words(@message.created_at) %>
      <p><%= @message.description %></p>

      <h3>Commentaires : </h3>
      <%= render @message.comments %>

      <h3>Répondre : </h3>
      <%= render 'comments/form' %>

      <%= link_to "Retour", root_path, class: "btn btn-default" %>
      <% if user_signed_in? %>
        <% if @message.user_id == current_user.id %>
          <%= link_to "Editer", edit_message_path(@message), class: "btn btn-default" %>
          <%= link_to "Supprimer", message_path(@message), method: :delete, data: { confirm: "Tu es sure?" }, class: "btn btn-default" %>
        <% end %>
      <% end %>
  </div>
</div>
